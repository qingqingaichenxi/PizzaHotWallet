<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xcoinpay.pizza.pizzawallet.view.SendDetailActivity"
    android:padding="@dimen/padding_20dp">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送到"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.001"
            />
        <TextView
            android:id="@+id/tv_coinid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/padding_10dp"
        android:id="@+id/tv_coin_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdfjkdsfdgl;pf;d'lpg[dfl[gk,aojfdf"
        />
    </LinearLayout>
    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送交易"
      android:layout_marginBottom="@dimen/padding_40dp"
        />
</LinearLayout>
