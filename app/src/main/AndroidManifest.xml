<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xcoinpay.pizza.pizzawallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 摄像头和闪光灯的权限和震动权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".globle.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.AddressBookActivity" />
        <activity android:name=".view.AddAddressActivity" />
        <activity android:name=".view.SelectBiActivity" />
        <activity android:name=".view.TestScanActivity" />
        <activity android:name=".view.TradeBookActivity" />
        <activity android:name=".view.RegistActivity" />
        <activity android:name=".view.ForgetActivity" />
        <activity android:name=".view.NewPwdActivity" />
        <activity android:name=".view.AboutActivity" />
        <activity android:name=".view.TokenActivity"></activity>
    </application>

</manifest>